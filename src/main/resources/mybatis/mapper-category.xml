<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wordstalk.translate.demo.dao.CategoryDao">

    <select id="countCategory" resultType="java.lang.Integer">
        SELECT COUNT(id) FROM TableA;
    </select>

    <resultMap id="categoryMap" type="com.wordstalk.translate.demo.dao.entity.Category">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <id column="name" property="name" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="queryCategoryById" resultMap="categoryMap">
        select id,name from TableA where id = #{id}
    </select>
</mapper>